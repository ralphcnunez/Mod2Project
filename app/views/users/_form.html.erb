
<%= form_for @user do |f| %>
<ul>
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  <% end %>
  </ul>
  <%= f.label "Band/user Name" %>
  <%= f.text_field :name %> <br>

  <%= f.label :email %>
  <%= f.email_field :email %> <br>

  <%= f.label :password %>
  <%= f.password_field :password %> <br>

  <%= f.submit "Create my account" %>
  <% end %>
